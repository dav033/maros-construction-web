---
// Si usas iconos de Lucide en Astro, puedes instalar "lucide-astro" y hacer la importaci√≥n:
import { Phone } from 'lucide-astro';
---

<section class="relative bg-primary text-primary-foreground py-12 lg:py-24 overflow-hidden">
  <div class="absolute inset-0 z-0">
    <img
      src="/placeholder.svg?height=800&width=1600"
      alt="Plumbing Services"
      class="object-cover opacity-10 w-full h-full"
      loading="eager"
    />
  </div>
  <div class="container px-4 md:px-6 relative z-10">
    <div class="flex flex-col items-center text-center space-y-4">
      <div class="inline-flex items-center gap-2 rounded-lg bg-primary-foreground/10 px-3 py-1 text-sm">
        <Phone class="h-4 w-4" /> 24/7 Emergency Service
      </div>
      <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl">
        Emergency Plumbing Services in Miami
      </h1>
      <p class="mx-auto max-w-[700px] text-lg md:text-xl">
        Fast, Reliable, and Available 24/7. When disaster strikes, we're here to help!
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <button class="px-6 py-3 rounded bg-background text-primary hover:bg-background/90">
          <Phone class="mr-2 h-4 w-4" /> Call Now: (888) 888-8888
        </button>
        <button class="px-6 py-3 rounded border border-primary bg-primary-foreground/10">
          Request Service Online
        </button>
      </div>
    </div>
  </div>
</section>
