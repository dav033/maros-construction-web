<form>
  <span> Help us to help you </span>
  <h3>Contact Us</h3>
  <input type="text" placeholder="Your Name" required />
  <input type="email" placeholder="Email" required />
  <input type="tel" placeholder="Phone" id="tel" />
  <textarea placeholder="Message" required></textarea>

  <button type="submit">SUBMIT</button>
</form>

<style>
  form {
    margin: auto;
    display: flex;
    flex-direction: column;
    height: 400px;
    width: 480px;
    padding: 20px;
    background-color: var(--white);
    position: relative;
    color: var(--main-bg-color);
    z-index: 100;
  }

  form span {
    font-size: 1.4em;
    text-align: center;
    font-family: "Barlow";
    margin-bottom: 10px;
  }

  form h3 {
    font-size: 1.8em;
    text-align: center;
    font-family: "Barlow";
    margin-bottom: 20px;
  }

  form input,
  form textarea {
    margin: 7px 0;
    padding: 10px;
    border: none;
    font-family: "Barlow" !important;
    font-weight: 500;
    font-size: 14px;
    color: var(--main-bg-color);
  }

  #tel {
    margin-bottom: 10px;
  }

  form textarea {
    resize: none;
    height: 100px;
  }

  form button {
    margin: 10px 0;
    padding: 10px;
    border: none;
    background-color: var(--main-color);
    color: var(--white);
    font-weight: bold;
    cursor: pointer;
    font-family: "Barlow";
    font-size: 16px;
  }

  @media screen and (max-width: 900px) {
    form {
      width: 430px;
    }

    form h3 {
      font-size: 1.6em;
    }

    form input,
    form textarea {
      font-size: 13px;
    }

    form button {
      font-size: 15px;
    }

    form textarea {
      height: 80px;
    }
  }
</style>
