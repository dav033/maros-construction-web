---
import { Image } from "astro:assets";
import image1 from "../../assets/images/imagePresentation1.webp";
import image2 from "../../assets/images/ImagePresentation2.webp";
---

<div class={`imageContent principal`}>
  <Image src={image1} alt="Presentation 1" class="background-image image1" />
  <Image src={image2} alt="Presentation 2" class="background-image image2" />
  <h3>Building your dreams, one by one.</h3>
</div>

<style>
  .imageContent {
    position: relative;
    overflow: hidden;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition:
      opacity 1s ease-in-out,
      transform 9s ease-in-out;
    z-index: 1;
  }

  .image1 {
    opacity: 1;
    animation: changeToImage1 18s infinite;
  }

  .image2 {
    opacity: 0;
    animation: changeToImage2 18s infinite;
  }

  .imageContent::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 2;
    animation: flashSequence 9s infinite;
  }

  .imageContent h3 {
    color: var(--white);
    position: relative;
    z-index: 3;
    font-family: "Hind Siliguri", sans-serif;
    font-size: 4rem;
  }

  @keyframes changeToImage1 {
    0%,
    49.99% {
      opacity: 1;
      transform: scale(1);
    }
    50%,
    100% {
      opacity: 0;
      transform: scale(1.08);
    }
  }

  @keyframes changeToImage2 {
    0%,
    49.99% {
      opacity: 0;
      transform: scale(1.08);
    }
    50%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes flashSequence {
    0% {
      background-color: rgba(255, 255, 255, 0.5);
    }
    20%,
    100% {
      background-color: rgba(0, 0, 0, 0.4);
    }
  }

  @media (max-width: 1050px) {
    .imageContent {
      height: calc(100vh - 50px) !important;
    }
    .imageContent h3 {
      font-size: 2.5rem;
      text-align: center;
    }
  }

  @media (max-width: 800px) {
    .imageContent h3 {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 600px) {
    .imageContent h3 {
      font-size: 2rem;
    }
  }

  @media (max-width: 400px) {
    .imageContent {
      padding: 10px;
    }
    .imageContent h3 {
      font-size: 1.5rem;
    }
  }
</style>
