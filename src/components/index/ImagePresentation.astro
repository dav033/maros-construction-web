<div class={`imageContent principal`}>
  <h3>Building your dreams, one by one.</h3>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Hind+Siliguri:wght@600&display=swap");

  :global(.imageContent) {
    position: relative;
  }

  :global(.imageContent::before) {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.1);
    z-index: 10;
  }

  .imageContent.principal {
    display: flex;
    justify-content: center;
    align-items: center;
    height: calc(100vh);
    width: 100%;

    background-size: 108% 108%;
    background-position: center;
    background-repeat: no-repeat;

    animation:
      changeToImage1 18s infinite,
      changeToImage2 18s 9s infinite,
      zoomIn 2s,
      zoomInSequence 9s 9s infinite;
  }

  .imageContent.principal::before {
    background-color: rgba(0, 0, 0, 0.4);
    animation:
      flash 1s,
      flashSequence 9s 9s infinite;
  }

  .imageContent.principal h3 {
    color: var(--white);
    position: relative;
    z-index: 100;
    font-family: "Hind Siliguri", sans-serif;
    font-size: 3rem;
    font-weight: 100;
  }

  .imageContent.principal h3 span {
    color: #ff6b6b;
  }

  @keyframes zoomIn {
    0% {
      background-size: 100% 100%;
    }
    100% {
      background-size: 108% 108%;
    }
  }

  @keyframes zoomInSequence {
    0% {
      background-size: 100% 100%;
    }
    20% {
      background-size: 108% 108%;
    }
    100% {
      background-size: 108% 108%;
    }
  }

  @keyframes flash {
    0% {
      background-color: rgba(255, 255, 255, 0.5);
    }

    100% {
      background-color: rgba(0, 0, 0, 0.4);
    }
  }

  @keyframes flashSequence {
    0% {
      background-color: rgba(255, 255, 255, 0.5);
    }

    20% {
      background-color: rgba(0, 0, 0, 0.4);
    }

    100% {
      background-color: rgba(0, 0, 0, 0.4);
    }
  }

  @keyframes changeToImage1 {
    0%,
    49.99% {
      background-image: url("../../assets/images/prueba1.webp");
    }
    50%,
    100% {
      background-image: url("../../assets/images/indexImage1.jpg");
    }
  }

  @keyframes changeToImage2 {
    0%,
    49.99% {
      background-image: url("../../assets/images/indexImage1.jpg");
    }
    50%,
    100% {
      background-image: url("../../assets/images/prueba1.webp");
    }
  }

  @media (max-width: 750px) {
    .imageContent.principal {
      background-size: cover !important;
      height: calc(100vh - 50px) !important;
      background-position: 15%;

      &::before {
        animation: none;
      }
      h3 {
        font-size: 2.5rem;
        text-align: center;
      }
    }
  }

  @media (max-width: 650px) {
    .imageContent.principal {
      background-size: cover;
    }
  }

  @media (max-width: 600px) {
    .imageContent.principal {
      h3 {
        font-size: 2rem;
      }
    }
  }

  @media (max-width: 320px) {
    .mainPage {
      .imageContent.principal {
        h3 {
          font-size: 1.5rem;
        }
      }
    }
  }
</style>
