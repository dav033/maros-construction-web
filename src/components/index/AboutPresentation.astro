---
import Image from "astro/components/Image.astro";
import images from "../../../public/images";
---

<section class="aboutPresentation">
  <div class="main">
    <div>
      <span>About Us</span>
      <h2>Your best option</h2>

      <p>
        MAROS CONSTRUCTION is a company specialized in a wide variety of
        concrete services, ranging from concrete restoration to custom concrete
        applications. Our goal is to enhance existing buildings in South
        Florida, serving clients in the residential, condominium, and commercial
        markets. At MAROS CONSTRUCTION, quality isn’t just a buzzword—it’s our
        foundation.
      </p>

      <a href="/about-us" aria-label="About Us">About Us</a>
    </div>
  </div>

  <div class="image">
    <Image
      src={images.imageAboutPresentation}
      alt="About Us"
      width={800}
      height={600}
    />
  </div>
</section>

<style>
  .aboutPresentation {
    height: calc(100vh - 80px);
    width: 100%;
    display: flex;
    justify-content: space-between;
  }

  .aboutPresentation .main {
    width: 68%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0 10%;
    color: var(--white);
  }

  .aboutPresentation .main div {
    width: 70%;
  }

  .aboutPresentation h2,
  .aboutPresentation p,
  .aboutPresentation span {
    font-family: "Barlow";
  }

  .aboutPresentation h2 {
    font-size: 32px;
    margin-bottom: 1rem;
    word-spacing: 0.3rem;
    font-weight: 300;
  }

  .aboutPresentation p {
    font-size: 17px;
    margin-bottom: 2rem;
    line-height: 1.75;
    font-weight: 500;
  }

  .aboutPresentation a {
    background-color: var(--main-color);
    color: var(--white);
    padding: 15px 25px;
    border: none;
    font-size: 16px;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.3s;
  }

  .aboutPresentation a:hover {
    background-color: #a8042e;
  }

  .aboutPresentation span {
    font-size: 14px;
    margin-bottom: 10px;
    display: block;
    color: #eae7e2;
  }

  .aboutPresentation span:before {
    content: "";
    height: 1px;
    background-color: #eae7e2;
    display: inline-block;
    vertical-align: middle;
    opacity: 0.3;
    width: 40px;
    margin-right: 10px;
  }

  .aboutPresentation .image {
    width: 32%;
    height: 100%;
    position: relative;
  }

  .aboutPresentation .image::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
  }

  .aboutPresentation img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media screen and (max-width: 1300px) {
    .aboutPresentation .main {
      padding: 0 5%;
    }
  }

  @media screen and (max-width: 1000px) {
    .aboutPresentation .main {
      padding: 0;
    }
  }

  @media screen and (max-width: 750px) {
    .aboutPresentation {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: calc(100vh + 20px);
    }

    .aboutPresentation .image {
      width: 300px;
      height: 300px;
      margin: 0 auto 20px;
    }

    .aboutPresentation .image::before {
      content: none;
    }

    .aboutPresentation .main {
      width: 100%;
    }

    .aboutPresentation .main div {
      width: 100%;
      padding: 0 10%;
    }
  }

  @media screen and (max-width: 500px) {
    .aboutPresentation h2 {
      font-size: 24px;
    }

    .aboutPresentation p {
      font-size: 14px;
    }

    .aboutPresentation a {
      padding: 10px 20px;
      font-size: 14px;
    }

    .aboutPresentation span {
      font-size: 12px;
    }

    .aboutPresentation span:before {
      width: 30px;
    }
  }
</style>
